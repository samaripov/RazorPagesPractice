@page
@model QuizApp.Pages.Questions.DetailsModel

@{
    ViewData["Title"] = "Details";
    var quizId = ViewData["QuizId"];

}

<h1>Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Text)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="/AnswerOptions/Create" asp-route-questionId = "@Model.Question.Id" asp-route-quizId="@quizId">Add Option</a> |
    <a asp-page="./Edit" asp-route-id="@Model.Question.Id" asp-route-quizId = "@quizId">Edit</a> |
    <a asp-page="/Quizzes/Details" asp-route-id="@quizId">Back to Quiz</a>
</div>
