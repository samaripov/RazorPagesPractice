@page
@model QuizApp.Pages.Questions.EditModel

@{
    ViewData["Title"] = "Edit";
    var quizId = ViewData["QuizId"];
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Question.Id" />
            <div class="form-group">
                <input asp-for="Question.QuizId" class="form-control" value="@quizId" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Question.Text" class="control-label"></label>
                <input asp-for="Question.Text" class="form-control" />
                <span asp-validation-for="Question.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Quizzes/Details" asp-route-id="@quizId">Back to Quiz</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
