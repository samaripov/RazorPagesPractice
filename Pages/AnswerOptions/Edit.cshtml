@page
@model QuizApp.Pages.AnswerOptions.EditModel

@{
    ViewData["Title"] = "Edit";
    var quizId = ViewData[""];
}

<h1>Edit</h1>

<h4>AnswerOption</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="quizId" value="@quizId" hidden/>
            <input type="hidden" asp-for="AnswerOption.Id" />
            <div class="form-group">
                <label asp-for="AnswerOption.Text" class="control-label"></label>
                <input asp-for="AnswerOption.Text" class="form-control" />
                <span asp-validation-for="AnswerOption.Text" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AnswerOption.isCorrect" /> @Html.DisplayNameFor(model => model.AnswerOption.isCorrect)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
